<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wave"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/location"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Vehicle Photo"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical"
        android:text="Choose Location"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Choose Source and Destination for the vehicle:"
        android:gravity="center"
        android:textColor="#4C0D0D"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/vehicleNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle"
        android:gravity="center"
        android:textColor="#9C27B0"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Add EditText fields for source and destination -->
    <EditText
        android:id="@+id/sourceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Source Location"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/destinationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Destination Location"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Date (YYYY-MM-DD)"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Time (HH:MM AM/PM)"
        android:layout_marginTop="5dp" />

    <!-- Add a "Calculate Route" button -->
    <Button
        android:id="@+id/calculateRouteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Route"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/bookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riding Now"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:visibility="gone" />

    <!-- Add a MapView -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
