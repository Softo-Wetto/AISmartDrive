<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wave"
    android:padding="16dp">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-210dp"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="-140dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/homeicon"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Vehicle Photo"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="-100dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical"
        android:text="Home Page"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, [User's Name]. How can we assist?"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#9C27B0"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/vehicleListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Vehicle List"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/userProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View User Profile"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
